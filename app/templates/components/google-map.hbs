<div class="container-fluid">


<div class="form-group">
  <form>
    <div class="form-group">
   <!-- <label>Select City</label> -->
   {{#x-select value=city  class="form-control"}}
       <option>Select a City</option>
     {{#each cities as |city|}}
       {{#x-option value=city}} {{city.name}} {{/x-option}}
     {{/each}}
   {{/x-select}}
 </div>

 <div class="form-group">
